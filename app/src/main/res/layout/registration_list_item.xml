<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/txt_registration_item_code"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textStyle="bold"
        android:text="@+id/registration_item_code" />
    <TextView
        android:id="@+id/txt_registration_item_date"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:text="@+id/registration_item_date"/>
    <TextView
        android:id="@+id/txt_registration_item_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:text="@+id/registration_item_status" />
    <TextView
        android:id="@+id/txt_registration_item_idcategory"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:text="@+id/registration_item_idcategory" />
    <TextView
        android:id="@+id/txt_registration_item_id"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:text="@+id/registration_item_id" />
</LinearLayout>
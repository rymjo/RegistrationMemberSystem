<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="microvone.de.barcode.ScanActivity">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button android:id="@+id/btn_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_scan"
            tools:layout_editor_absoluteY="38dp"
            tools:layout_editor_absoluteX="136dp"
            android:onClick="scanBarcode"
            android:layout_alignParentStart="true"
            android:layout_marginStart="33dp" />
        <Button android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_save"
            tools:layout_editor_absoluteY="38dp"
            tools:layout_editor_absoluteX="136dp"
            android:onClick="saveCodes"
            android:layout_marginStart="33dp"
            android:layout_toEndOf="@+id/category_id"
            android:layout_alignParentTop="true"
            android:layout_alignBottom="@+id/btn_scan" />
        <TextView
            android:id="@+id/category_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textIsSelectable="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/btn_scan" />
        <TextView
            android:id="@+id/category_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textIsSelectable="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/category_id"/>
        <ListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/category_id"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="14dp" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
